<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:visibility="gone"
            android:id="@+id/view_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">


                <TextView
                    android:id="@+id/tv_timer_value"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/view_timer" />


                <Button
                    android:id="@+id/btn_timer_setting"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/classification_button"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="시간설정"
                    android:textColor="@color/searchTextColor"
                    android:textSize="5pt" />


                <Button
                    android:id="@+id/btn_timer_stop"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/classification_button"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="일시정지"
                    android:textColor="@color/searchTextColor"
                    android:textSize="5pt" />

                <Button
                    android:id="@+id/btn_timer_reset"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/classification_button"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="초기화"
                    android:textColor="@color/searchTextColor"
                    android:textSize="5pt" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">


                <TextView
                    android:id="@+id/tv_timer_value2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/view_timer" />


                <Button
                    android:id="@+id/btn_timer_setting2"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/classification_button"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="시간설정"
                    android:textColor="@color/searchTextColor"
                    android:textSize="5pt" />


                <Button
                    android:id="@+id/btn_timer_stop2"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/classification_button"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="일시정지"
                    android:textColor="@color/searchTextColor"
                    android:textSize="5pt" />

                <Button
                    android:id="@+id/btn_timer_reset2"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/classification_button"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="초기화"
                    android:textColor="@color/searchTextColor"
                    android:textSize="5pt" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">


                <TextView
                    android:id="@+id/tv_timer_value3"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/view_timer" />


                <Button
                    android:id="@+id/btn_timer_setting3"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/classification_button"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="시간설정"
                    android:textColor="@color/searchTextColor"
                    android:textSize="5pt" />


                <Button
                    android:id="@+id/btn_timer_stop3"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/classification_button"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="일시정지"
                    android:textColor="@color/searchTextColor"
                    android:textSize="5pt" />

                <Button
                    android:id="@+id/btn_timer_reset3"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/classification_button"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="초기화"
                    android:textColor="@color/searchTextColor"
                    android:textSize="5pt" />

            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_content1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/view_timer"
            app:layout_constraintTop_toBottomOf="@+id/iv_food" />


        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toTopOf="@+id/view_timer"
            app:layout_constraintTop_toBottomOf="@+id/iv_food" />


        <include
            android:id="@+id/toolbar"
            layout="@layout/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



